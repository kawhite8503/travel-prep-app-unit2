<%- include('../../partials/html-head') %>
<%- include('../../partials/nav') %>






<h1 id="packingListTitle">Packing List</h1>
<div class="packList-body">
  <% sortedItems.forEach(list => { %>
    <ul class="newList">
      <h3 class="name"> <%= list[0].whoFor %> </h3>
      <% list.forEach(item => { %>
        <li class="newItem">
          <%= item.name %>
          <form action="/events/<%= event.id %>/items/<%= item._id %>?_method=PUT" method="POST">
            <button type="submit">
              <input onclick="return false" type="checkbox" <%= item.isPacked? 'checked' : '' %> > Packed
            </button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% }) %>




</div>
<div id="footer-buttons">

<a href="/events/<%= event._id %>/items"><button>Add More Items</button></a>
<a href="/events/<%= event._id %>"><button>Back to Event Page</button></a>
</div>


<%- include('../../partials/footer') %>