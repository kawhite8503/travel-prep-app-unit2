<%- include('../../partials/nav') %>


<h1>Packing List</h1>

<div id="columns-forEach-whoFor">
<% event.packItems.forEach(packItem => { %>
  <div class="pack-list-column">
    <h2><%= event.packItems.whoFor %></h2>
    <div class="list-heading">
      <h3 class="list-heading-item">Item</h3>
      <h3 class="list-heading-item">Packed?</h3>
    </div>
    <div>
      <ul>
      <li><%= event.packItems.name %></li>  
      </ul>
    </div>
  </div>
<% }) %> 
</div>
<a href="/events/<%= event._id %>/items"><button>Add More Items</button></a>
<a href="/events/<%= event._id %>"><button>Back to Event Page</button></a>



