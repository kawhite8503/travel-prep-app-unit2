<h1 id="packingListTitle">Packing List</h1>
<div class="packList-body">
  <% sortedItems.forEach(list => { %>
    <ul>
      <h3> <%= list[0].whoFor %> </h3>
      <% list.forEach(item => { %>
        <li>
          <%= item.name %>
          <form action="">
            <input type="checkbox" <%= item.isPacked? 'checked' : '' %> >
          </form>
        </li>
      <% }) %>
    </ul>
  <% }) %>


